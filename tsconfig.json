{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@entities/*": ["./src/entities/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@features/*": ["./src/features/*"],
      "@ui/*": ["./src/shared/ui/*"],
      "@types": ["./src/shared/types"],
      "@types/*": ["./src/shared/types/*"],
      "@utils": ["./src/shared/utils"],
      "@utils/*": ["./src/shared/utils/*"],
      "@providers": ["./src/shared/providers"],
      "@providers/*": ["./src/shared/providers/*"],
      "@icons": ["./src/shared/assets/icons"],
      "@icons/*": ["./src/shared/assets/icons/*"],
      "@img": ["./src/shared/assets/img"],
      "@img/*": ["./src/shared/assets/img/*"],
      "@stores": ["./src/shared/providers/stores"],
      "@stores/*": ["./src/shared/providers/stores/*"],
      "@constants": ["./src/shared/constants"],
      "@constants/*": ["./src/shared/constants/*"],
      "@api": ["./src/shared/api"],
      "@api/*": ["./src/shared/api/*"],
      "@hooks": ["./src/shared/hooks"],
      "@hooks/*": ["./src/shared/hooks/*"],
      "@shared": ["./src/shared"],
      "@entities": ["./src/entities"],
      "@widgets": ["./src/widgets"],
      "@features": ["./src/features"],
      "@ui": ["./src/shared/ui"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
